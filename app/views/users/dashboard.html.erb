<div class="container mb-5">
    <div class="row">
      <h2 class="mb-4 mt-4 col-6">Booked Experiences</h2>
    </div>
    <div class="row">
      <% @bookings.each do |booking| %>
       <div class="col-4">
          <div class="card-trip">
                <%= cl_image_tag booking.experience.photo, height: 180, width: 290, crop: :thumb, class: 'w-100' %>
            <div class="card-trip-infos">
              <div>
                <h2 class="mb-1"><%= booking.experience.title %></h2>
                <p class="mb-1"><%= booking.experience.description %></p>
                <p><strong>Starts on:</strong> <%= booking.start_on.strftime('%w %B, %Y') %></p>
                <p><strong>Ends on:</strong> <%= booking.end_on.strftime('%w %B, %Y') %></p>
              </div>
                <h2 class="card-trip-pricing">$<%= booking.price %></h2>
            </div>
            <div class="download">
            <a class="btn btn-success w-100" href="#">Download Experience<i class="fas fa-cloud-download-alt ml-2"></i></a>
            </div>
              <div class="m-3 text-center">
              <a class="btn btn-danger" href="#">Delete</a>
            </div>
          </div>
        </div>
     <% end %>
    </div>
  </div>
</div>


<div class="container" style="margin-top: 32px;">
  <div class="container mb-5">
    <div class="row">
      <h2 class="mb-4 col-6">Listed Experiences</h2>
    </div>
    <div class="row">
      <% @experiences.each do |experience| %>
      <% if experience.owner == current_user %>
      <div class="col-4">
          <div class="card-trip mb-3">
             <%= cl_image_tag experience.photo, height: 180, width: 290, crop: :thumb, class: 'w-100' %>
            <div class="card-trip-infos">
              <div>
                <h2 class="mb-1"><%= experience.title %></h2>
                <p><%= experience.description %></p>
              </div>
              <h2 class="card-trip-pricing">$<%= experience.price %></h2>
            </div>
            <div class="d-flex justify-content-between m-3">
              <%= render 'experiences/update_experience_modal', resource: experience do %>
                <%= simple_form_for experience do |f| %>
                  <%= f.input :title %>
                  <%= f.input :description %>
                  <%= f.input :price %>
                  <%= f.input :photo %>
                  <%= f.input :photo_cache, as: :hidden %>
                  <div class="buttons d-flex justify-content-between">
                    <%= f.button :submit, class: 'btn btn-primary' %>
                    <%= f.button :button, "Reset", type: "reset", class: "btn-outline-secondary" %>
                  </div>
                <% end %>
              <% end %>
              <% if experience.owner == current_user %>
                <%= link_to "Delete", experience_path(experience),
                class: 'btn btn-danger',
                method: :delete,
                data: { confirm: "Are you sure you want to delete: #{experience.title}?" } %>
              <% end %>
             </div>
          </div>
        <% end %>
      </div>
    <% end %>
    </div>
  </div>

  <%= render 'past_experiences' %>



