<div class="container">
  <div class="row">
      <h2 class="mb-4 mt-4 col-6">Booked Experiences (<%= @bookings.count %>)</h2>
  </div>
    <% @bookings.each do |booking| %>
    <div class="card-product m-3">
    <%= cl_image_tag booking.experience.photo, crop: :thumb, height: 220, width: 240%>
    <div class="card-product-infos justify-content-between">
      <h3><%= booking.start_on.strftime('%w %B, %Y') %> - <%= booking.end_on.strftime('%w %B, %Y') %></h3>
      <h2><%= booking.experience.title %></h2>
      <p><%= booking.experience.description %></p>
        <div class="buttons d-flex justify-content-between align-items-center mt-4">
          <div class="trash fas fa-trash-alt">
          </div>
        </div>
    </div>
          <div>
            <a class="btn btn-primary btn-horizontal-card" href="">Download Experience   <i class="fas fa-cloud-download-alt"></i></a>
          </div>
  </div>
    <% end %>
</div>

<div class="container">
  <div class="row">
      <h2 class="mb-4 mt-4 col-6">Listed Experiences (<%= @experiences.count %>)</h2>
  </div>
    <% @experiences.each do |experience| %>
    <% if experience.owner == current_user %>
    <div class="card-product m-3">
      <%= cl_image_tag experience.photo, class: 'img' %>
    <div class="card-product-infos">
      <h2><%= experience.title %></h2>
      <p><%= experience.description %></p>
          <div>
            <h3>$<%= experience.price %>/day</h3>
          </div>
        </div>
            <div>
          <%= render 'experiences/update_experience_modal', resource: experience do %>
                <%= simple_form_for experience do |f| %>
                  <%= f.input :title %>
                  <%= f.input :description %>
                  <%= f.association :categories,
                          include_hidden: false,
                          input_html: { multiple: true }  %>
                  <%= f.input :price %>
                  <%= f.input :photo %>
                  <%= f.input :photo_cache, as: :hidden %>
                  <div class="buttons justify-content-between">
                    <%= f.button :submit, class: 'btn btn-primary' %>
                    <%= f.button :button, "Reset", type: "reset", class: "btn-outline-secondary" %>
                  </div>
                <% end %>
              <% end %>
              <% if experience.owner == current_user %>
                <%= link_to " ", experience_path(experience),
                class: 'trash fas fa-trash-alt',
                method: :delete,
                data: { confirm: "Are you sure you want to delete: #{experience.title}?" } %>
              <% end %>
            </div>
        <% end %>
    </div>
    <% end %>
</div>








