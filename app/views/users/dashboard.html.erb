<div class="container">
  <h2>Your listed experiences:</h2>
    <% @experiences.each do |experience| %>
       <% if experience.owner == current_user %>
       <ul>
         <li><h3> <%= experience.title %></h3>
              <h5><%= experience.description %></h5>
              <p><%= experience.price %></p>
              <%= render 'experiences/update_experience_modal' do %>
                <%= simple_form_for experience do |f| %>
                  <%= f.input :title %>
                  <%= f.input :description %>
                  <%= f.input :price %>
                  <%= f.input :photo %>
                  <%= f.input :photo_cache, as: :hidden %>

                  <div class="buttons d-flex justify-content-between">
                    <%= f.button :submit, class: 'btn btn-primary' %>
                    <%= f.button :button, "Reset", type: "reset", class: "btn-outline-secondary" %>
                  </div>
                <% end %>
              <% end %>
              <% if experience.owner == current_user %>
                <%= link_to "Delete", experience_path(experience),
                class: 'btn btn-danger',
                method: :delete,
                data: { confirm: "Are you sure you want to delete: #{experience.title}?" } %>
              <% end %>
         </li>
       </ul>
        <% end %>
  <% end  %>

  <h2>Your bookings:</h2>

  <ul>
    <% @bookings.each do |booking| %>
      <li>
        <%= booking.experience.title %>
        <%= cl_image_tag booking.experience.photo, height: 180, width: 290, crop: :thumb %>
        Booking starts on: <%= booking.start_on %>
        Booking ends on: <%= booking.end_on %>
        Booking price: <%= booking.price %>
        <hr>
      </li>
    <% end %>
  </ul>
</div>


