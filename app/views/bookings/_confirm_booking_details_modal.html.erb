<!-- The Modal -->
<div class="modal fade modal-sm" id="confirmBooking">
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Confirm Experience</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        <div id="booking-info">
          <p>
            <strong>booking-start-date:</strong>
            <span id="booking-start-date"></span>
          </p>

          <p>
            <strong>booking-end-date:</strong>
            <span id="booking-end-date"></span>
          </p>

          <p>
            <strong>booking-total-price:</strong>
            <span id="booking-total-price"></span>
          </p>
        </div>
      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>

    </div>
  </div>
</div>
