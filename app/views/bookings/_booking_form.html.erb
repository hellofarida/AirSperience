<h2>Book this experience</h2>

<%= simple_form_for [@experience, @booking] do |f| %>
  <%= f.input :start_on, html5: true, as: :date, id: 'form-start-date' %>
  <%= f.input :end_on, html5: true, as: :date, id: 'form-end-date' %>
  <%= f.input :price, as: :hidden %>

  <%= f.button :submit, class: 'btn-dark mb-3 modal-submit', id: 'book-experience' %>
<% end %>

<%= render 'bookings/confirm_booking_details_modal' %>
