<h2><strong>$<%= @experience.price %>/day</strong></h2>
<hr>
<%= simple_form_for [@experience, @booking] do |f| %>
  <%= f.input :start_on, html5: true, as: :date %>
  <%= f.input :end_on, html5: true, as: :date %>

  <%= f.hidden_field :experience_price, value: @experience.price %>
  <hr>
  <h3>Total: <span class="booking-total-price">   <i class="fas fa-spinner fa-pulse"></i>
</span></h3>
<hr>
  <%= f.button :submit, class: 'btn btn-primary mb-3 modal-submit w-100', id: 'book-experience' %>
<% end %>
