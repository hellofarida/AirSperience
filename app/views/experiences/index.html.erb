<div class="container" id="index-page">
  <h2 class="mt-3">All experiences (<%= @experiences.count %>)</h2>
  <%= render 'shared/search_form' %>
  <div class="error-message mt-2">
    <% if flash[:empty_search] %>
    <p><%= flash[:empty_search] %></p>
    <% end %>
  </div>
</div>


<div class="cards">
  <% @experiences.each do |experience| %>
    <%= link_to experience_path(experience.id), class: 'card' do %>
      <% if experience.photo? %>
        <%= cl_image_tag experience.photo, height: 180, width: 290, class: 'card-img-top', crop: :thumb %>
      <% else %>
        <%= cl_image_tag experience.picture_url, height: 180, width: 290, class: 'card-img-top', crop: :thumb %>
      <% end %>

      <div class="card-body">
        <h5 class="card-title"><%= experience.title %></h5>
        <p class="card-text"><%= experience.description %></p>
        <p class="text-muted card-body-bottom"><i class="fas fa-dollar-sign"></i><%= experience.price %></p>
      </div>

      <div class="card-footer text-muted text-left">
        <% experience.categories.each do |category| %>
          <span class="badge badge-info p-1"><%= category.name %></span>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
