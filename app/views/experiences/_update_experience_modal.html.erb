<% modal_id = "modal#{resource.class}#{resource.id}" %>

<!-- Button to Open the Modal -->
<button type="button" class="btn btn-primary btn-horizontal-card" data-toggle="modal" data-target="#<%= modal_id %>">
  Edit Experience <i class="fas fa-edit"></i>
</button>

<!-- The Modal -->
<div class="modal fade modal-sm" id=<%= modal_id %>>
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Edit Your Experience Listing</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        <%= yield %>
      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
