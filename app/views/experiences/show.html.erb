<div class="container experience-show">

      <div class="row mt-5 mb-5">
        <div class="col-6">
          <% if @experience.photo? %>
            <%= cl_image_tag @experience.photo, class: 'card-img-top mb-3' %>
            <% else %>
            <%= cl_image_tag @experience.picture_url, class: 'card-img-top mb-3' %>
          <% end %>
        </div>

        <div class="col-6">
          <h1><%= @experience.title %></h1>

          <p><%= @experience.description %></p>

            <% if current_user == @experience.owner %>
              <div class="alert alert-primary">You own this experience! <%= link_to dashboard_path do %> <i class='fas fa-pencil-alt ml-2'></i> Edit via Dashboard <% end %></div>
            <% else %>
              <% if @experience.owner.name %><p><strong>Made by:</strong> <%= @experience.owner.name  %> <% end %> </p>
            <% end %>

          <p><strong>Created at:</strong> <%= @experience.created_at.strftime("%b %-d, %Y") %><br>
            <strong>Last updated:</strong> <%= @experience.updated_at.strftime("%b %-d, %Y") %></p>
          <p><strong>Price per day:</strong> $<%= @experience.price %></p>
          <p><strong>Categories:</strong> <% @experience.categories[0..-2].each do |category| %>
                                                <%= category.name %>,
                                              <% end %>
                                              <%= @experience.categories.last.name unless @experience.categories.empty?%></p>
        </div>

        </div>
      </div>

  <% if current_user != @experience.owner %>
    <div class="card mb-5">
      <%= render 'bookings/booking_form' %>
    </div>
  <% end %>

</div>
